            <TextField fx:id="searchField" onAction="#handleSearchAction" promptText="Nhập từ cần tra..." HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchAction" text="Thêm từ">
               <tooltip>
                  <Tooltip text="Thực hiện tra cứu từ" />
               </tooltip>
            </Button>
