<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.Googletab">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="English Input:" />
    <TextArea fx:id="englishTextArea" prefHeight="100.0" promptText="Enter English text here..." wrapText="true" />

    <Button fx:id="translateButton" mnemonicParsing="false" onAction="#handleTranslateButtonAction" text="Translate to Vietnamese" maxWidth="Infinity"/>

    <Label text="Vietnamese Output:" />
    <TextArea fx:id="vietnameseTextArea" editable="false" prefHeight="100.0" promptText="Translation will appear here..." wrapText="true" />

</VBox>