<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<BorderPane prefHeight="300" prefWidth="400" style="-fx-background-radius: 30; -fx-background-color: transparent;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.WinController">
   <stylesheets>
      <URL value="@../../../../../../../../BTLTK/EnglishApp/src/main/resources/front_end/css/bootstrapfx.css" />
   </stylesheets>
   <center>
      <VBox alignment="CENTER" prefHeight="302.0" prefWidth="404.0" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #2ca44f, #b6f5c6); -fx-background-radius: 20;">
         <children>
            <Label alignment="CENTER" styleClass="h1, strong" text="CONGRATULATIONS!" textFill="WHITE" />
            <Line endX="400" stroke="WHITE" />
            <Label id="winMessage" styleClass="lead, big-font" text="Your win message here" textFill="WHITE" />
            <Label id="winWord" styleClass="h1, strong" text="Your winning word here" textFill="WHITE" />
            <Button mnemonicParsing="false">
               <graphic>
                  <ImageView fx:id="nextQues" fitHeight="43.0" fitWidth="87.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: 20;">
                     <image>
                        <Image url="@../../../picture/GameLogo/nextques.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
