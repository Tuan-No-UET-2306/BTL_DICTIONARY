         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <ListView fx:id="wordListView" prefHeight="560.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
