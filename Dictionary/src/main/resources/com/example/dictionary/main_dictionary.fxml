      <ScrollPane fitToWidth="true" fitToHeight="true" BorderPane.alignment="CENTER">
         <content>
            <TextArea fx:id="definitionArea" editable="false" wrapText="true" prefHeight="558.0" prefWidth="598.0" promptText="Định nghĩa sẽ hiển thị ở đây..." />
         </content>
      </ScrollPane>
   </center>
