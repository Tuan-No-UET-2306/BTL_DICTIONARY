<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" prefHeight="541.0" prefWidth="750.0" spacing="10.0" stylesheets="@googletab.css"  xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.GoogleTabController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack">
      <graphic>
         <ImageView fitHeight="25.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true" rotate="180.0">
            <image>
               <Image url="@../../../picture/LogoButton/exit.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>

    <Label text="English">
      <font>
         <Font name="System Bold Italic" size="14.0" />
      </font></Label>
    <TextArea fx:id="englishTextArea" prefHeight="310.0" prefWidth="710.0" promptText="Enter English text here..." wrapText="true" />
   <Button fx:id="translateButton" mnemonicParsing="false" onAction="#handleTranslateButtonAction">
      <graphic>
         <ImageView fitHeight="43.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../picture/LogoButton/img.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>

    <Label text="Vietnamese">
      <font>
         <Font name="System Bold Italic" size="14.0" />
      </font></Label>
    <TextArea fx:id="vietnameseTextArea" editable="false" prefHeight="318.0" prefWidth="710.0" promptText="Translation will appear here..." wrapText="true" />

</VBox>
